.homepage
  min-height: 500px
  
  h1
    font-size: 1.5em
    text-transform: lowercase
    text-align: center
    animation: fadeinfromtop 3s
    color: #888
  
  h2
    font-size: 1.2em
    text-transform: lowercase
    text-align: center
    animation: fadeinfrombottom 6s
    opacity: 1
    color: #888
    
  @keyframes fadeinfromtop
    0% { 
      opacity: 0;
      margin-top: -30px;
    }
    
    100% {
      opacity: 1;
      margin-top: 0;
    }
    
  @keyframes fadeinfrombottom
    0% { 
      opacity: 0;
      margin-top: 100px;
    }
    30% {
      opacity: 0;
      margin-top: 100px;
    }
    100% {
      opacity: 1;
      margin-top: 0;
    }
  
  .quote
    padding-top: 13%

.about
  max-width: 600px
  margin: 0 auto
  
  .about-item
    margin-top: 40px
