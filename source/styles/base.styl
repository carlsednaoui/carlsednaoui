/**
 * variables
 */

pageWidth = 1080px
spacing = 20px


/**
 body, header and footer
 */

body
  font-family: 'Source Sans Pro', sans-serif;
  color: greyDark

header
  padding-top: spacing

  &:after
    content:  ''
    display:  block
    padding-top: spacing
    border-bottom: 1px grey solid
    max-width: pageWidth
    margin: 0 auto

  ul
    text-align: center

  li
    display: inline-block

  a
    text-decoration: none
    margin-right: spacing
    color: grey

footer
  margin: spacing auto 0 auto
  padding: spacing
  max-width: pageWidth
  min-height: 100px
  color: greyDark

  &:before
    content:  ''
    display:  block
    border-bottom: 1px grey solid
    max-width: pageWidth
    margin: 0 auto spacing 0


/**
 other styles
 */

h1
  font-size: 2.4em
  margin-bottom: 30px
h2
  font-size: 1.8em
  margin-bottom: 20px
h3
  font-size: 1.4em
  margin-bottom: 10px
p
  font-size: 1.1em
  line-height: 1.5em
  margin-bottom: 10px

li
  font-size: 1.1em
  line-height: 1.5em

.content h1 a,
.content h2 a,
.content h3 a,
.content li a,
.content p a
  color: greyDark
  text-decoration: none
  border-bottom: 1px solid greyLight

blockquote
  border-left: 5px solid greyDark
  padding-left: 15px
  margin-top: 10px
  margin-bottom: 10px

img
  border-radius: 3px
