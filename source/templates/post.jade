doctype html
html(lang="en")
  include partials/_head.jade
  body
    include partials/_header.jade
    
    .blog-post
      block content

      .course-promo
        p
          a(href="http://training.carlsednaoui.com/courses/ppc-training-course")
            img(src="/images/course-promo.jpg")

      script.
        $("a:has(img)").addClass("js-imageLink");

      #disqus_thread
      script.
        var disqus_shortname = 'carlsednaoui';
        (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();  
